package com.example.service;

import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Service;

@Service
@RequiredArgsConstructor
@Slf4j
public class CustomerProcedureService {

    private final JdbcTemplate jdbcTemplate;

    public void updateJamesDepartment() {
        try {
            jdbcTemplate.execute("EXEC TEST.update_james_dept");
            log.info("Stored procedure TEST.update_james_dept executed successfully");
        } catch (Exception ex) {
            log.error("Error executing stored procedure", ex);
            throw new RuntimeException("Failed to execute stored procedure", ex);
        }
    }
}
